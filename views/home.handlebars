<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css">
    <title>Remote Printing</title>
  </head>
  <br>
    <h1>REMOTE PRINTING TEST</h1>

    <input type="file" name="file" id="file" />

    <p>
      <progress />
    </p>
    <p>
      <output></output>
    </p>

    <br /><br />

    <form action="/print" method="post">
      <label for="format">Choose format:</label>
      <select name="format" id="format">
        <option value="A3">A3</option>
        <option value="A4">A4</option>
      </select>
      <br /><br />
      <label for="orientation">Choose orientation:</label>
      <select name="orientation" id="orientation">
        <option value="3">Portrait</option>
        <option value="4">Landscape</option>
      </select>
      <br /><br />
      <label for="color">Choose color mode:</label>
      <select name="color" id="color">
        <option value="True">Full color</option>
        <option value="False">Grayscale</option>
      </select>
      <br /><br />
      <input type="text" name="fileName" id="fileName" readonly="" hidden="" />
      <br /><br />
      <input type="submit" value="Print!" />
    </form>
    <script src="xhr2FileUpload.js"></script>
  </body>
</html>